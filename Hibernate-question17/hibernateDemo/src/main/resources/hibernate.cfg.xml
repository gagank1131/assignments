<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernatePractice</property>
        <property name="hibernate.connection.username">ttn</property>
        <property name="hibernate.connection.password">ttn</property>

        <property name="connection.pool_size">10</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <property name="show_sql">true</property>

        <property name="hbm2ddl.auto">create</property>
        <!--Question4-->
        <!--<property name="hbm2ddl.auto">update</property>-->
        <!--Question5-->
        <!--<property name="hbm2ddl.auto">create-drop</property>-->

        <!--Annotated entity class-->
        <mapping class="com.demo.hibernate.Author"/>
        <mapping class="com.demo.hibernate.Book"/>


        <mapping class="com.demo.hibernate.question17.Book"/>
        <mapping class="com.demo.hibernate.question17.Author"/>



    </session-factory>
</hibernate-configuration>